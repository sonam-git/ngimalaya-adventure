            {"name": "Moderate", "value": "Moderate"},
            {"name": "Hard", "value": "Hard"},
            {"name": "Moderate to Hard", "value": "Moderate to Hard"},
            {"name": "Challenging", "value": "Challenging"},
            {"name": "Strenuous", "value": "Strenuous"},
            {"name": "Extreme", "value": "Extreme"}
