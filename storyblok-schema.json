        "highlights": {
          "type": "bloks",
          "required": true,
          "display_name": "Trek Highlights",
          "restrict_components": true,
          "component_whitelist": ["list_item"]
        },
        "image": {
          "type": "asset",
          "required": true,
          "display_name": "Trek Image",
          "filetypes": ["images"]
